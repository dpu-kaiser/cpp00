################################################################################
################################## VARIABLES ###################################
################################################################################

NAME    := megaphone

CC      =  c++
CFLAGS  =  -Wall -Wextra -Werror -std=c++17

SRC     := megaphone.cpp


################################################################################
#################################### RULES #####################################
################################################################################

all: $(NAME)

$(NAME): 
	@$(CC) $(CFLAGS) $(SRC) -o $@
	@echo "[$(NAME)] Created binary."

clean:
	@if [ -f "$(NAME)" ]; then \
		rm -f $(NAME); \
		echo "[$(NAME)] Removed binary."; \
	fi

fclean: clean
	@if [ -f "$(NAME)" ]; then \
		rm -f $(NAME); \
		echo "[$(NAME)] Removed binary."; \
	fi

re:	fclean all

.PHONY: all clean fclean re

################################################################################
################################################################################
